category:           Development
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

executable tush
    import:           warnings
    main-is:          Main.hs
    other-modules:    Misc,
                      Interpret.Token,
                      Interpret.Parse,
                      Interpret.Evaluate,
                      Interpret.Data,
                      Interpret.Operators,
    -- other-extensions:
    build-depends:    base ^>=4.21.0.0,
                      brick,
                      -- I don't know which one to use yet.
                      vty-crossplatform,
                      containers,
                      directory,
                      process,
    hs-source-dirs:   .
    default-language: GHC2024
